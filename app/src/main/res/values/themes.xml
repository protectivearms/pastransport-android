<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PASTransport" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item><!-- App Bar color -->
        <item name="colorPrimaryVariant">@color/black</item> <!-- Darker variant -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.PASTransport" parent="Base.Theme.PASTransport" />
    <style name="RatingBarTheme" parent="">
        <item name="colorControlNormal">@color/white</item>       <!-- empty star -->
        <item name="colorControlActivated">#FFA500</item>    <!-- filled star (orange) -->
    </style>


    <!-- Custom style for DatePickerDialog -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:weekNumberColor">@android:color/white</item>
        <item name="android:buttonStyle">@style/CustomDatePickerButtonStyle</item>

    </style>
    <!--alerter Heading text-->
    <style name="AlertTextAppearanceTitle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertTextAppearanceText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Custom style for the DatePicker buttons -->
    <style name="CustomDatePickerButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:weekNumberColor">@android:color/white</item>
    </style>


    <!-- Custom theme for TimePickerDialog -->

    <!-- Custom theme for TimePickerDialog -->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Change the background color of the dialog -->
        <item name="android:background">#000000
        </item> <!-- Black background for the whole dialog -->

        <!-- Header (title) color -->
        <item name="android:textColorPrimary">@color/black</item> <!-- White text for the header -->

        <!-- Color of the clock's time text -->
        <item name="android:textColorSecondary">@color/black50
        </item> <!-- White text for the clock -->

        <!-- Change the color of the selected numbers -->
        <item name="android:colorAccent">#000000
        </item> <!-- White for the selected number on the clock -->

        <!-- Change the background color of the header (where the time is displayed) -->
        <item name="android:backgroundDimEnabled">true</item>

        <!-- Apply dimming effect if needed -->
    </style>


</resources>